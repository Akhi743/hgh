        print(f"Total Pages in PDF: {results.get('total_pages_in_pdf', 'N/A')}")
        print(f"Pages Processed: {results.get('pages_processed', 'N/A')}")
        print(f"Total Rows Extracted: {results.get('total_rows', 'N/A')}")
        print(f"CSV Output: {results.get('csv_path', 'N/A')}")
        print("="*70)
        print("\nKey Features:")
        print("1. Extracts notification date from email body text (not header)")
        print("2. Captures complete Commercial + Medicare limit information")
        print("3. Smart page classification to avoid processing irrelevant pages")
        print("4. Letter ending detection using 'sincerely' or 'enclosure'")
        
    except Exception as e:
        logger.critical(f"A critical error occurred in the main execution block: {e}")
        print(f"Error: {e}")
